#include <iostream>
#include <cstdlib>
#include <cmath>
 
using namespace std;
 
double f(double x) { return cos(x)*pow(x,2); }
double df(double x) { return (2*x*cos(x))-(pow(x,2)*sin(x)); } 
 
int main() {
 double tmp,x,pogr;
 int N=0;
 
 cout<<"pogr=";
 cin>>pogr;  
 cout<<"x0=";
 cin>>x;    
 tmp=x+2*pogr;
    while(fabs(x-tmp)>pogr) { 
     tmp=x;
     x=x-f(x)/df(x);
     N++;
   }
   cout.setf(ios::scientific);
cout<<endl<<endl<<"x="<<x<<endl<<"N="<<N<<endl;
cin>>N;
return 0;
}
